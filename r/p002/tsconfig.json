{
    "compilerOptions": {
      "baseUrl": "./src",
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["dom", "es2015"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "jsx": "react",
      "sourceMap": true,
      "outDir": "./deploy",
      "paths": {
        "@scenes" :["scenes"],
        "@utils" :["utils"],
        "@datatype": ["datatypes"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "TSAdditionaldef.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }  