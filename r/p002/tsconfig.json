{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["dom", "es2015"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "jsx": "react",
      "sourceMap": true,
      "outDir": "./deploy"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }  